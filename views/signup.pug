extend base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Create your account
      form.form.form--signup
        .form__group
          label.form__label(for='name') name
          input#name.form__input(type='text', placeholder='name', required)
        .form__group.ma-bt-md
          label.form__label(for='email') Email
          input#email.form__input(type='email', placeholder='youremail@gmail.com', required)
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required)

        .form__group.ma-bt-md
          label.form__label(for='password') Confirm password
          input#confirmPassword.form__input(type='password', placeholder='••••••••', required)
        .form__group
          button.btn.btn--green sign up